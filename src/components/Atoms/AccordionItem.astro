---
import IconArrow from './IconArrow.astro';

interface Props {
	question: string;
	answer: string;
}

const {question, answer} = Astro.props;
---
                                                  
<div 
    x-data="{ open: false }" x-cloak
    class="font-medium border border-gray-200 bg-white rounded-md overflow-hidden mb-1">
    <dt
        x-on:click="open =!open"
        class="flex items-center justify-between w-full p-5 font-medium text-gray-500 border-b border-b-1 focus:ring-4 focus:ring-transparent hover:bg-gray-100 gap-3 bg-gray-50 rounded-md"
    >
        <span class="text-left">{question}</span>
        <div :class="{'rotate-180': open, 'rotate-0': !open}"><IconArrow /></div>
    </dt>
    <dd 
        x-show="open"   
        x-transition:enter="fade-enter-active" 
        x-transition:enter-start="fade-enter" 
        x-transition:enter-end="fade-enter-active" 
        x-transition:leave="fade-leave-active" 
        x-transition:leave-start="fade-leave-active" 
        x-transition:leave-end="fade-enter"
        class="p-5">
        <p class="mb-2 text-gray-500 font-light">{answer}</p>
    </dd>
</div>

<style>
    .fade-enter-active, .fade-leave-active {
        transition: opacity .5s;
    }
    .fade-enter, .fade-leave-to {
        opacity: 0;
    }
  </style>