---
import CtaButtonPrimaryMedium from "./Atoms/CtaButtonPrimaryMedium.astro";
---

<nav 
    x-data="{ open: true }"
    x-cloak
    class="topbar fixed w-full z-50 transition-all duration-300"
    id="topbar">
    <div
    
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">

        <!-- * Logo * -->
        <a href="/#hero" class="flex items-center space-x-3 rtl:space-x-reverse pr-16">
            <img src="/images/logo-billin.svg" class="h-10" alt="Billin Logo">
        </a>
        
        <!-- * Left Side Of Navbar * -->
        <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
            
            <div class="hidden md:block">
                <CtaButtonPrimaryMedium />
            </div>

            <!-- * Hamburger Button * -->
            <button 
                x-on:click="open =! open"
                type="button" 
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-full md:hidden hover:bg-blue-100">
                <span class="sr-only">Abrir menu</span>
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                </svg>
            </button>

        </div>
        
        <!-- * Right Side Of Navbar * -->
        <div class="items-center justify-between hidden- w-full md:flex md:w-auto md:order-1 z-50" id="navbar-sticky">
            
            <!-- * Menu * -->
            <ul 
                :class="{'hidden md:flex': open, 'flex': !open}"
                class="flex flex-col p-4 md:p-0 mt-4 font-medium md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 transition ease-in-out delay-150">
                <li>
                    <a href="/#features" class="menu-item" aria-current="page">
                        Funcionalidades
                    </a>
                </li>
                <li>
                    <a href="/#testimonials" class="menu-item" aria-current="page">
                        Testimonios
                    </a>
                </li>
                <li>
                    <a href="/#faqs" class="menu-item" aria-current="page">
                        FAQs
                    </a>
                </li>
                <li>
                    <a href="/#pricing" class="menu-item" aria-current="page">
                        Pricing
                    </a>
                </li>
                <li class="block pt-6 md:pt-2 py-2 px-1 md:hidden text-4xl">
                    <CtaButtonPrimaryMedium />
                </li>
            </ul>
        </div>
    </div>
</nav>

<style>
    .menu-item{
        @apply block text-xl md:text-sm py-4 md:py-2 px-1 hover:text-blue-500 border-b-2 hover:border-blue-500 border-transparent transition-all duration-300 ease-out;
    }
    .topbar{
        @apply bg-white fixed w-full z-20 top-0 start-0 bg-opacity-95
    }
    .fade-enter-active, .fade-leave-active {
        transition: opacity .5s;
    }
    .fade-enter, .fade-leave-to {
        opacity: 0;
    }

</style>
  